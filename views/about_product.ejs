<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product?.name || 'Product' %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
</head>

<body class="bg-gray-100 min-h-screen flex items-center justify-center p-4">

<% if (!product) { %>
    <div class="bg-white p-10 rounded-xl shadow-lg text-center">
        <h2 class="text-2xl font-bold text-gray-700 mb-3">Product not found ðŸ˜•</h2>
        <a href="/shop" class="text-indigo-600 font-semibold">Back to Shop</a>
    </div>
<% } else { 

    // Correct Discount Calculation
    const finalPrice = product.discount > 0
        ? Math.max(product.price - (product.price * product.discount / 100), 0)
        : product.price;
%>

<div class="bg-white rounded-2xl shadow-xl overflow-hidden w-full max-w-4xl flex flex-col md:flex-row">

    <!-- IMAGE -->
    <div class="w-full md:w-1/2 h-72 md:h-auto relative flex items-center justify-center p-6"
         style="background-color:<%= product.bgcolor || '#f3f4f6' %>">

        <% if (product.image) { %>
            <img
                src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                class="max-h-56 md:max-h-72 w-full object-contain drop-shadow-lg"
                alt="<%= product.name %>"
            />
        <% } else { %>
            <span class="text-gray-400">No Image Available</span>
        <% } %>
    </div>

    <!-- DETAILS -->
    <div class="w-full md:w-1/2 p-6 md:p-8 flex flex-col">

        <!-- TITLE + RATING -->
        <div class="flex justify-between items-start mb-2">
            <h1 class="text-2xl md:text-3xl font-bold text-gray-800 leading-tight">
                <%= product.name %>
            </h1>

            <% if (product.rating > 0) { %>
                <div class="flex items-center gap-1 text-yellow-500 font-bold text-sm bg-yellow-50 px-2 py-1 rounded">
                    <span><%= product.rating %></span>
                    <i class="ri-star-fill"></i>
                </div>
            <% } %>
        </div>

        <!-- META -->
        <p class="text-sm text-gray-500 font-medium uppercase tracking-wide mb-4">
            <%= product.brand || 'Brand' %> â€¢ <%= product.category || 'Category' %>
        </p>

        <!-- PRICE -->
        <div class="flex items-end gap-3 mb-4">
            <span class="text-3xl font-bold text-gray-900">
                â‚¹<%= finalPrice.toFixed(0) %>
            </span>

            <% if (product.discount > 0) { %>
                <span class="text-sm line-through text-gray-400 mb-1">
                    â‚¹<%= product.price %>
                </span>
                <span class="text-red-600 text-sm font-semibold mb-1">
                    <%= product.discount %>% OFF
                </span>
            <% } %>
        </div>

        <!-- DESCRIPTION -->
        <p class="text-gray-600 text-sm leading-relaxed mb-6">
            <%= product.description || 'No description available.' %>
        </p>

        <!-- STOCK -->
        <div class="mb-6 text-sm">
            <% if (product.stock > 0) { %>
                <span class="text-green-600 font-medium flex items-center gap-1">
                    <i class="ri-checkbox-circle-fill"></i>
                    In Stock (<%= product.stock %> left)
                </span>
            <% } else { %>
                <span class="text-red-500 font-medium flex items-center gap-1">
                    <i class="ri-close-circle-fill"></i>
                    Out of Stock
                </span>
            <% } %>
        </div>

        <!-- ACTIONS -->
        <div class="flex gap-3 mt-auto">
            <% if (product.stock > 0) { %>
                <a href="/cart/increase/<%= product._id %>"
                   class="flex-1 py-3 px-4 rounded-lg font-semibold shadow hover:opacity-90 transition
                          flex justify-center items-center gap-2 text-sm md:text-base"
                   style="background-color:<%= product.panelcolor || '#4f46e5' %>; color:#ffffff;">
                    <i class="ri-shopping-cart-2-fill"></i>
                    Add to Cart
                </a>
            <% } else { %>
                <button disabled
                        class="flex-1 py-3 px-4 rounded-lg font-semibold bg-gray-300 text-gray-600 cursor-not-allowed">
                    Out of Stock
                </button>
            <% } %>

            <!-- Wishlist -->
            <button
                class="p-3 rounded-lg border border-gray-300 text-gray-500 hover:bg-gray-50 hover:text-red-500 transition"
                title="Add to Wishlist">
                <i class="ri-heart-line text-lg"></i>
            </button>
        </div>

    </div>
</div>

<% } %>

</body>
</html>
