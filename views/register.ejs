<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scatch - Register</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        /* Style for active button state */
        .active-scale-down:active {
            transform: scale(0.98);
        }
    </style>
</head>

<body class="bg-gradient-to-br from-blue-50 via-white to-blue-100 min-h-screen flex flex-col">

    <nav class="w-full flex justify-between items-center px-6 md:px-12 py-4 bg-white/70 backdrop-blur-md shadow-md sticky top-0 z-10">
        <a href="/" class="text-3xl font-extrabold text-blue-700 tracking-tight hover:text-blue-800 transition duration-200" aria-label="Scatch Home">
            Scatch
        </a>
    </nav>

    <div class="flex-1 flex items-center justify-center p-4 sm:p-6">

        <div class="w-full max-w-lg bg-white/90 backdrop-blur-xl p-8 sm:p-10 rounded-xl shadow-2xl border border-blue-100">

            <h2 class="text-4xl font-extrabold text-gray-900 mb-3 text-center">
                Create Your Account
            </h2>
            <p class="text-gray-500 mb-8 text-center text-lg">
                Join Scatch and explore premium products with ease.
            </p>
            

            <!-- Flash Messages -->
            <% if (error && error.length > 0) { %>
                <div class="mb-4 px-4 py-3 rounded-lg bg-red-100 text-red-700 text-center font-medium">
                    <%= error[0] %>
                </div>
            <% } %>

            <% if (success && success.length > 0) { %>
                <div class="mb-4 px-4 py-3 rounded-lg bg-green-100 text-green-700 text-center font-medium">
                    <%= success[0] %>
                </div>
            <% } %>

            <form action="/users/register" method="POST" class="space-y-6">

                <div>
                    <label for="fullname" class="block mb-2 font-semibold text-sm text-gray-700">Full Name</label>
                    <input type="text" id="fullname" name="fullname" required placeholder="e.g. Jane Doe"
                        class="w-full px-5 py-3 bg-gray-50 border border-gray-300 rounded-lg placeholder-gray-400 text-gray-900 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
                </div>

                <div>
                    <label for="email" class="block mb-2 font-semibold text-sm text-gray-700">Email Address</label>
                    <input type="email" id="email" name="email" required placeholder="you@example.com"
                        class="w-full px-5 py-3 bg-gray-50 border border-gray-300 rounded-lg placeholder-gray-400 text-gray-900 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
                </div>

                <div>
                    <label for="password" class="block mb-2 font-semibold text-sm text-gray-700">Password</label>

                    <div class="relative">
                        <input type="password" id="password" name="password" required placeholder="Minimum 8 characters" minlength="8"
                            class="w-full px-5 py-3 bg-gray-50 border border-gray-300 rounded-lg text-gray-900 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition pr-12">

                        <span id="togglePassword" role="button" tabindex="0"
                            class="absolute right-3 top-1/2 -translate-y-1/2 cursor-pointer text-gray-500 hover:text-gray-700 transition"
                            aria-label="Toggle password visibility">
                            
                            <svg id="eyeOpen" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.64 0 8.577 3.01 9.964 7.183.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.64 0-8.577-3.01-9.964-7.178z" />
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>

                            <svg id="eyeClosed" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                stroke-width="1.5" stroke="currentColor" class="w-6 h-6 hidden">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.247 
                                7.244 19.5 12 19.5c1.719 0 3.351-.38 4.82-1.057M6.228 
                                6.228A10.45 10.45 0 0112 4.5c4.715 0 8.713 3.168 
                                10.05 7.38a10.523 10.523 0 01-4.293 5.222M6.228 
                                6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 
                                21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 
                                4.242L9.88 9.88" />
                            </svg>
                        </span>
                    </div>

                    <div class="h-2  w-full"></div>

                    <div class="mt-2 text-xs font-medium text-gray-500">
                        <p id="length-hint" class="flex items-center">
                            <span class="w-3 h-3 mr-1 inline-flex items-center justify-center text-blue-500">
                                &bull;
                            </span>
                            Password must be at least 8 characters long.
                        </p>
                        <p id="complexity-hint" class="flex items-center">
                            <span class="w-3 h-3 mr-1 inline-flex items-center justify-center text-blue-500">
                                &bull;
                            </span>
                            Include uppercase, lowercase, and a number.
                        </p>
                    </div>
                </div>
                
                <button type="submit"
                    class="w-full py-3 bg-blue-600 text-white rounded-xl text-lg font-bold shadow-lg shadow-blue-500/50 hover:bg-blue-700 active-scale-down transition duration-200 focus:outline-none focus:ring-4 focus:ring-blue-500 focus:ring-opacity-50">
                    Create My Account
                </button>
            </form>

            <p class="text-center text-gray-500 mt-6 text-sm">
                Already have an account?
                <a href="/login" class="text-blue-600 font-semibold hover:underline transition duration-150">Login</a>
            </p>

        </div>
    </div>

    <footer class="w-full text-center py-5 text-gray-500 text-sm border-t border-gray-200">
        © <span id="year"></span> Scatch · All Rights Reserved
    </footer>

    <script>
        document.getElementById('year').innerText = new Date().getFullYear();

        // JavaScript for the Show/Hide Password feature
        const password = document.getElementById("password");
        const toggle = document.getElementById("togglePassword");
        const eyeOpen = document.getElementById("eyeOpen");
        const eyeClosed = document.getElementById("eyeClosed");
        
        // This is necessary for the screen reader/tab focus interaction
        toggle.addEventListener('keydown', function(e) {
            if (e.key === ' ' || e.key === 'Enter') {
                e.preventDefault();
                toggle.click();
            }
        });

        toggle.addEventListener("click", () => {
            const isPassword = password.type === "password";
            const type = isPassword ? "text" : "password";
            password.type = type;

            // Toggle icons
            eyeOpen.classList.toggle("hidden");
            eyeClosed.classList.toggle("hidden");
            toggle.setAttribute('aria-label', isPassword ? 'Hide password' : 'Show password');
        });
        
        // --- Placeholder JS for Password Hint Feedback ---
        // In a real application, you would add logic here to check the password value
        // and dynamically update the classes (e.g., text-green-500, checkmark icon)
        // on the length-hint and complexity-hint elements.

        // password.addEventListener('input', function() {
        //     const value = password.value;
        //     const isLongEnough = value.length >= 8;
        //     // Update classes based on isLongEnough
        //     const lengthHint = document.getElementById('length-hint');
        //     lengthHint.classList.toggle('text-green-600', isLongEnough);
        //     lengthHint.classList.toggle('text-red-500', !isLongEnough);
        // });

    </script>

</body>

</html>